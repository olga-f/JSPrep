{
  "name": "jsprep-front-end",
  "version": "1.0.0",
  "description": "JS Prep front-end",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "is-ci \"test:coverage\" \"test:watch\"",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "type-check": "tsc",
    "validate": "npm-run-all --parallel type-check test:coverage",
    "codegen:schema": "npx apollo client:download-schema --endpoint=http://127.0.0.1:8000/graphql/",
    "codegen:generate": "npx apollo client:codegen --localSchemaFile=schema.json --includes=lib/**/*.ts --globalTypesFile=./lib/graphql/globalTypes.ts --target=typescript"
  },
  "dependencies": {
    "@apollo/client": "^3.3.13",
    "apollo-boost": "^0.4.9",
    "graphql": "^15.5.0",
    "lodash": "^4.17.21",
    "next": "latest",
    "next-seo": "^4.23.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.1",
    "@types/jest": "^26.0.22",
    "@types/lodash": "^4.14.168",
    "@types/node": "^12.12.21",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-jest-dom": "^3.7.0",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-testing-library": "^3.10.2",
    "husky": "^6.0.0",
    "is-ci-cli": "^2.2.0",
    "jest": "^26.6.3",
    "jest-runner-eslint": "^0.10.0",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "typescript": "4.0"
  },
  "jest-runner-eslint": {
    "cliOptions": {
      "ignorePath": ".gitignore"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build"
    }
  },
  "lint-staged": {
    "**/*.+(js|json|jsx|md|ts|tsx)": [
      "prettier --write",
      "jest --findRelatedTests"
    ]
  },
  "keywords": [
    "react",
    "react.js",
    "next.js",
    "graphql",
    "apollo"
  ],
  "author": "Olga F. Andreiko",
  "license": "MIT"
}
